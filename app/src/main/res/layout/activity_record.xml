<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecordActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/record_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/nba_trophie"
        android:backgroundTint="#BA6A6363"
        android:backgroundTintMode="add"
        >

    </ImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/panel_LAY_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="32dp"
            />

        <FrameLayout
            android:id="@+id/panel_LAY_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="32dp">

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            >

            <Button
                android:id="@+id/record_BTN_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:backgroundTint="#E8454444"
                android:fontFamily="serif"
                android:text="Quit Game"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="23sp"
                android:layout_marginEnd="10dp"
                >

            </Button>
            <Button
                android:id="@+id/record_BTN_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7454444"
                android:fontFamily="serif"
                android:text="Menu"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="23sp"

                >

            </Button>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>