<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ButtonModeActivity">


    <ImageView
        android:id="@+id/buttonMenu_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kb_vs_mj"
        >

    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMenu_BTN_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textColor="@color/blue_200"

        android:fontFamily="sans-serif-medium"
        android:textSize="20dp"
        android:backgroundTint="@color/grey_700"
        app:cornerRadius="90dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/chooseMenu_LBL_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Choose\nPlaying Speed"
        android:textAlignment="center"

        android:fontFamily="serif"
        android:padding="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        >

    </TextView>

    <Button
        android:id="@+id/buttonMenu_BTN_FastMode"
        android:text="Fast Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/buttonMenu_BTN_SlowMode"
        android:fontFamily="sans-serif-medium"
        android:textSize="36dp"
        android:backgroundTint="@color/grey_200"
        android:textColor="@color/blue_200"
        >

    </Button>

    <Button
        android:id="@+id/buttonMenu_BTN_SlowMode"
        android:text="Slow Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"

        android:fontFamily="sans-serif-medium"
        android:textSize="36dp"
        android:backgroundTint="@color/grey_200"
        android:textColor="@color/blue_200"
        >

    </Button>

</RelativeLayout>